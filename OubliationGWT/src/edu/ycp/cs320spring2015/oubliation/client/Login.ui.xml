<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.header {
			font-size: 3em;
			text-align: center;
			padding: 1em;
		}
		.error {
			color: red;
			padding: 1em;
		}
		
	</ui:style>
	<g:FlowPanel>
		<g:Label styleName="{style.header}">Oubliation</g:Label>
		<g:Grid>
			<g:row>
				<g:cell>Username</g:cell>
				<g:customCell><g:TextBox ui:field="username" /></g:customCell>	
			</g:row>
			<g:row>
				<g:cell>Password</g:cell>
				<g:customCell><g:PasswordTextBox ui:field="password" /></g:customCell>	
			</g:row>
		</g:Grid>
		<g:Button ui:field="loginButton">Login</g:Button>
		<g:Label ui:field="error" styleName="{style.error}" />
	</g:FlowPanel>
</ui:UiBinder> 